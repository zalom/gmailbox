<div class="flash-msg text-center">
  <% if notice %>
    <p class="alert alert-success"><%= notice %><button type="button"
    class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %><button type="button"
    class="close" data-dismiss="alert">×</button></p>
  <% end %>
</div>


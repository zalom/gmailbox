<!-- BEGIN LOGIN -->
<div class="content">
  <!-- BEGIN LOGIN FORM -->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login-form') do |f| %>
    <h3 class="font-green">Log in</h3>
    <div class="form-group margin-top-20 margin-bottom-20">
      <div id="register_tnc_error">
        <%= devise_error_messages! %>
      </div>
    </div>

    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <%= f.text_field :email, placeholder: "Email", class: "form-control form-control-solid placeholder-no-fix" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control form-control-solid placeholder-no-fix" %>
    </div>
    <div class="form-actions">
      <%= f.submit "Login", id: "login-btn", class: "btn green uppercase" %>
      <% if devise_mapping.rememberable? -%>
        <label class="rememberme check mt-checkbox mt-checkbox-outline">
            <%= f.check_box :remember_me %>Remember
            <span></span>
        </label>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot Password ?", new_password_path(resource_name), id: "forget-password", class: "forget-password" %>
        <% end -%>
      <% end -%>
    </div>
    <div class="create-account">
        <p>
        <%= link_to "Create an account", new_registration_path(resource_name), id: "register-btn", class: "uppercase" %>
        </p>
    </div>
  <% end %>
  <!-- END LOGIN FORM -->
</div>
<!-- END LOGIN -->

<div class="content">
  <!-- BEGIN FORGOT PASSWORD FORM -->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, novalidate: 'novalidate' }, class:"forget-form") do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <h3 class="font-green">Change your password</h3>
    <p class="hint">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
    </p>
    <div class="form-group">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control placeholder-no-fix", placeholder: "Enter a new password" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control placeholder-no-fix", placeholder: "Confirm a new password" %>
    </div>
    <div class="form-actions">
      <%= link_to "Cancel", new_session_path(resource_name), id: "back-btn", class: "btn green btn-outline" %>
      <%= f.submit "Submit", id: "forgot-submit", class: "btn green uppercase pull-right" %>
    </div>
  <% end %>
  <!-- END FORGOT PASSWORD FORM -->
</div>
<!-- END FORGOT PASSWORD -->

<div class="row clear-right-margin">
  <!-- BODY SIDEBAR -->
  <%= render 'messages/shared/sidebar' %>
  <!-- END BODY SIDEBAR -->
  <!-- CONTENT -->
  <div class="col-md-10">
    <div class="inbox-body">
      <div class="inbox-header">
        <h1 class="pull-left">Inbox</h1>
      </div>
      <div class="inbox-content">
        <%= form_tag bulk_action_messages_path, method: :patch, remote: true do %>
        <table class="table table-striped table-advance table-hover">
          <thead>
            <tr>
              <th colspan="3">
                <label id="check_all" class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                  <input type="checkbox" class="mail-group-checkbox">
                  <span></span>
                </label>
                <%= render 'message_actions' %>
              </th>
              <th class="pagination-control" colspan="3">
                <span class="pagination-info"> 1-30 of 789 </span>
                <a class="btn btn-sm blue btn-outline">
                  <i class="fa fa-angle-left"></i>
                </a>
                <a class="btn btn-sm blue btn-outline">
                  <i class="fa fa-angle-right"></i>
                </a>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'thread', collection: @messages %>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
  </div>
  <!-- END CONTENT -->
</div>

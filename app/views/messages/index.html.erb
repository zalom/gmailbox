<div class="row clear-right-margin">
  <!-- BODY SIDEBAR -->
  <%= render 'messages/shared/sidebar' %>
  <!-- END BODY SIDEBAR -->
  <!-- CONTENT -->
  <div class="col-md-10">
    <div class="inbox-body">
      <div class="inbox-header">
        <h1 class="pull-left">Inbox</h1>
      </div>
      <div class="inbox-content">
        <%= form_tag update_action_messages_path, method: :patch, remote: true do %>
        <table class="table table-striped table-advance table-hover">
          <thead>
            <tr>
              <th colspan="3">
                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                  <input type="checkbox" class="mail-group-checkbox">
                  <span></span>
                </label>
                <div class="btn-group input-actions">
                  <a class="btn btn-sm blue btn-outline dropdown-toggle sbold" href="javascript:;" data-toggle="dropdown"> Actions
                    <i class="fa fa-angle-down"></i>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= button_tag type: "submit", name: 'read', class: "btn btn-md white", style: "width: 100%; text-align: left" do %>
                        <i class="fa fa-pencil-square"></i> Mark as Read
                      <% end %>
                    </li>
                    <li>
                      <%= button_tag type: "submit", name: 'unread', class: "btn btn-md white", style: "width: 100%; text-align: left" do %>
                        <i class="fa fa-pencil-square-o"></i> Mark as Unread
                      <% end %>
                    </li>
                    <li>
                      <%= button_tag type: "submit", name: 'starred', class: "btn btn-md white", style: "width: 100%; text-align: left" do %>
                        <i class="fa fa-star"></i> Mark as Starred
                      <% end %>
                    </li>
                    <li>
                      <%= button_tag type: "submit", name: 'unstarred', class: "btn btn-md white", style: "width: 100%; text-align: left" do %>
                        <i class="fa fa-star-o"></i> Mark as Unstarred
                      <% end %>
                    </li>
                    <li class="divider"> </li>
                    <% if params[:trash] %>
                     <li>
                       <%= button_tag type: "submit", name: 'non_trash', class: "btn btn-md white", style: "width: 100%; text-align: left" do %>
                         <i class="fa fa-trash-o"></i> Restore
                       <% end %>
                     </li>
                    <% else %>
                    <li>
                      <%= button_tag type: "submit", name: 'trash', class: "btn btn-md white", style: "width: 100%; text-align: left" do %>
                        <i class="fa fa-trash-o"></i> Delete
                      <% end %>
                    </li>
                    <% end %>
                  </ul>
                </div>
              </th>
              <th class="pagination-control" colspan="3">
                <span class="pagination-info"> 1-30 of 789 </span>
                <a class="btn btn-sm blue btn-outline">
                  <i class="fa fa-angle-left"></i>
                </a>
                <a class="btn btn-sm blue btn-outline">
                  <i class="fa fa-angle-right"></i>
                </a>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'thread', collection: @messages %>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
  </div>
  <!-- END CONTENT -->
</div>

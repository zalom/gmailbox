<div class="row">
  <!-- BODY SIDEBAR -->
  <div class="col-md-2">
    <div class="inbox-sidebar">
      <a href="compose.html" data-title="Compose" class="btn red compose-btn btn-block">
      <i class="fa fa-edit"></i> Compose </a>
      <ul class="inbox-nav">
        <li class="active">
          <a href="inbox.html" data-type="inbox" data-title="Inbox"> Inbox
            <span class="badge badge-success">3</span>
          </a>
        </li>
        <li>
          <a href="important.html" data-type="important" data-title="Inbox"> Important </a>
        </li>
        <li>
          <a href="sent.html" data-type="sent" data-title="Sent"> Sent </a>
        </li>
        <li>
          <a href="draft.html" data-type="draft" data-title="Draft"> Draft
            <span class="badge badge-danger">8</span>
          </a>
        </li>
        <li class="divider"></li>
        <li>
          <a href="trash.html" class="sbold uppercase" data-title="Trash"> Trash
            <span class="badge badge-info">23</span>
          </a>
        </li>
      </ul>
      <ul class="inbox-contacts">
        <li class="divider margin-bottom-30"></li>
        <li>
          <a href="compose.html">
            <img class="contact-pic" src="../assets/pages/media/users/avatar4.jpg">
            <span class="contact-name">Adam Stone</span>
          </a>
        </li>
        <li>
          <a href="compose.html">
            <img class="contact-pic" src="../assets/pages/media/users/avatar2.jpg">
            <span class="contact-name">Lisa Wong</span>
          </a>
        </li>
        <li>
          <a href="compose.html">
            <img class="contact-pic" src="../assets/pages/media/users/avatar6.jpg">
            <span class="contact-name">Anna Bold</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <!-- END BODY SIDEBAR -->
  <!-- CONTENT -->
  <div class="col-md-10">
    <div class="inbox-body">
      <div class="inbox-header">
        <h1 class="pull-left">Inbox</h1>
      </div>
      <div class="inbox-content">
        <table class="table table-striped table-advance table-hover">
          <thead>
            <tr>
              <th colspan="3">
                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                  <input type="checkbox" class="mail-group-checkbox">
                  <span></span>
                </label>
                <div class="btn-group input-actions">
                  <a class="btn btn-sm blue btn-outline dropdown-toggle sbold" href="javascript:;" data-toggle="dropdown"> Actions
                    <i class="fa fa-angle-down"></i>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <a href="javascript:;">
                      <i class="fa fa-pencil"></i> Mark as Read </a>
                    </li>
                    <li class="divider"> </li>
                    <li>
                      <a href="javascript:;">
                      <i class="fa fa-trash-o"></i> Delete </a>
                    </li>
                  </ul>
                </div>
              </th>
              <th class="pagination-control" colspan="3">
                <span class="pagination-info"> 1-30 of 789 </span>
                <a class="btn btn-sm blue btn-outline">
                  <i class="fa fa-angle-left"></i>
                </a>
                <a class="btn btn-sm blue btn-outline">
                  <i class="fa fa-angle-right"></i>
                </a>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @messages.each do |message| %>
              <tr class="unread" data-messageid="1">
                <td class="inbox-small-cells">
                  <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                    <input type="checkbox" class="mail-checkbox" value="1">
                    <span></span>
                  </label>
                </td>
                <td class="inbox-small-cells">
                  <i class="fa fa-star"></i>
                </td>
                <td class="view-message hidden-xs"> <%= message.sender_email %> </td>
                <td class="view-message "><a href="view_message.html"> <%= message.subject %> </a></td>
                <td class="view-message inbox-small-cells">
                </td>
                <td class="view-message text-right"> <%= sent_format(message.sent_at) %> </td>
              </tr>
            <% end %>
            <tr class="unread" data-messageid="2">
              <td class="inbox-small-cells">
                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                  <input type="checkbox" class="mail-checkbox" value="1">
                  <span></span>
                </label>
              </td>
              <td class="inbox-small-cells">
                <i class="fa fa-star"></i>
              </td>
              <td class="view-message hidden-xs"> Daniel Wong </td>
              <td class="view-message"><a href="view_message.html"> Please help us on customization of new secure server </a></td>
              <td class="view-message inbox-small-cells"> </td>
              <td class="view-message text-right"> March 15 </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- END CONTENT -->
</div>

